<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MD3t.StudentPage"
             Title="Student Manager">
    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Button to Display Students -->
        <Button Text="Display Students"
                Clicked="OnDisplayStudentsClicked" />

        <!-- Button to Add a New Student -->
        <Button Text="Add Student"
                Clicked="OnAddStudentClicked" />

        <!-- Students List -->
        <ScrollView>
            <VerticalStackLayout x:Name="StudentsList">
                <!-- Dynamically generated student items will appear here -->
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>